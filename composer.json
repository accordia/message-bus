{
    "name": "daikon/message-bus",
    "type": "library",
    "description": "Lightweight message bus for php.",
    "keywords": [ "message-bus", "messaging" ],
    "homepage": "https://github.com/daikon-cqrs/message-bus",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "daikon/data-structure": "master@dev",
        "ramsey/uuid": "3.6.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0",
        "satooshi/php-coveralls": "master@dev"
    },
    "autoload": {
        "psr-4": { "Daikon\\MessageBus\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\MessageBus\\": "tests" }
    },
    "scripts": {
        "build": [
            "@test",
            "@code-sniffer",
            "@validate-json"
        ],
        "test": "phpunit",
        "code-sniffer": "phpcs --extensions=php --standard=psr2 src tests",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
