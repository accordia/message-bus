{
    "name": "daikon/message-bus",
    "type": "library",
    "description": "Lightweight message bus for php.",
    "keywords": [ "message-bus", "messaging" ],
    "homepage": "https://github.com/daikon-cqrs/message-bus",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "require": {
        "php": "^7.2",
        "daikon/data-structure": "dev-upgrade-7.2",
        "ramsey/uuid": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3",
        "sebastian/phpcpd": "^4.1",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\MessageBus\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\MessageBus\\": "tests" }
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src/ tests/",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src/ tests/",
        "copy-paste-detector": "phpcpd src/ tests/",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
